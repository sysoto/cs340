<h1>Students</h1>


<!-- Browse Students -->

<table>
    <thead>
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each students}}
        <tr>
            <td>{{this.studentID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.enrollmentStatus}}</td>
            <td>
                <form method="POST" action="/students/delete">
                    <input type="hidden" name="studentID" value="{{this.studentID}}">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>


<!-- Add Student -->

<h2>Add New Student</h2>

<form method="POST" action="/students/add" class="cuForm">
    <label>First Name:</label>
    <input type="text" name="firstName" required>

    <label>Last Name:</label>
    <input type="text" name="lastName" required>

    <label>Email:</label>
    <input type="email" name="email" required>

    <label>Status:</label>
    <select name="enrollmentStatus" required>
        <option value="active">Active</option>
        <option value="inactive">Inactive</option>
    </select>

    <button type="submit">Add Student</button>
</form>


<!-- Update Student -->

<h2>Update Student</h2>

<form method="POST" action="/students/update" class="cuForm">
    <label>Select Student:</label>
    <select name="studentID" required>
        {{#each students}}
        <option value="{{this.studentID}}">
            {{this.firstName}} {{this.lastName}}
        </option>
        {{/each}}
    </select>

    <label>New Email:</label>
    <input type="email" name="email" required>

    <label>New Status:</label>
    <select name="enrollmentStatus" required>
        <option value="active">Active</option>
        <option value="inactive">Inactive</option>
    </select>

    <button type="submit">Update Student</button>
</form>